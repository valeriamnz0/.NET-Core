<div class="text-center row justify-content-center col-4 offset-4 bg-dark " style="margin-top: 15%;">

	<article class="card-body  text-light">
		<form method="post">
			<div class="form-group header ">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<h3>Reset Password</h3>
				<hr class="bg-light" />
			</div>

			<div class="form-group">
				<div class="clearfix separator"></div>
			</div>

			<div class="form-group inputs">
				<input type="hidden" asp-for="Email" />
				<input type="hidden" asp-for="Token" />
			</div><div class="form-group inputs py-3">
				<label asp-for="Password" class="form-text"></label>
				<input asp-for="Password" class="form-control bg-secondary text-light" placeholder="Password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<div class="form-group inputs pb-3">
				<label asp-for="PasswordConfirmation" class="form-text"></label>
				<input asp-for="PasswordConfirmation" class="form-control bg-secondary text-light" placeholder="Password Confirmation" />
				<span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
			</div>

			<div class="form-group inputs">
				<button id="submit" type="submit" class="btn btn-danger">ResetPassword</button>
			</div>

		</form>
	</article>
</div>
