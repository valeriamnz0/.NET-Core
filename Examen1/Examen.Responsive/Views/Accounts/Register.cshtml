<div class="text-center row justify-content-center" style="margin-top: 18%;">
	<div class="card bg-dark">
		<article class="card-body">
			<form class="form-signin" method="post">
				<h4 class="card-title text-center mb-4 mt-1 text-light">Register <i class="fa-solid fa-id-card"></i></h4>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<hr class="bg-light">
				<p class="text-light text-center">Please insert your credentials!</p>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text bg-secondary"> <i class="fa fa-user text-light"></i> </span>
						</div>
						<input asp-for="Email" class="form-control bg-dark text-light" placeholder="E-Mail" type="email" autofocus />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text bg-secondary"> <i class="fa-solid fa-key text-light"></i> </span>
						</div>
						<input asp-for="Password" class="form-control bg-dark text-light" placeholder="Password" type="password" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<div class="input-group">
						<div class="input-group-prepend">
							<span class="input-group-text bg-secondary"> <i class="fa fa-lock text-light"></i> </span>
						</div>
						<input asp-for="PasswordConfirmation" class="form-control bg-dark text-light" placeholder="Password confirmation" type="password" />
						<span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group">
					<button id="submit" type="submit" class="btn btn-secondary btn-block">Register</button>
				</div>
			</form>
		</article>
	</div>
</div>


