@model Rol

@{
	var titulo = "Crear Rol";
}

<style>
	body {
		background: rgb(52,58,64);
		background: linear-gradient(90deg, rgba(52,58,64,1) 0%, rgba(108,117,125,1) 25%, rgba(145,145,145,1) 50%, rgba(108,117,125,1) 75%, rgba(52,58,64,1) 100%);
		/*background: rgb(108,117,125);
		background: radial-gradient(circle, rgba(108,117,125,1) 0%, rgba(52,58,64,1) 80%, rgba(52,58,64,1) 100%);*/
	}

</style>
<div class="text-center row justify-content-center col-12 bg-dark " style="margin-top: 15%;">

	<article class="card-body col-9 offset-2">
		<form method="post">
			<div class="text-light">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				@if (Model.Id > 0)
				{
					titulo = "Editar Rol";
				}
				<div class="col-9 border-bottom">
					<h2 class="text-light">@titulo</h2>
				</div>
				<div class="col-8 pt-4">
					<div class="form-group row">
						<div class="col-4">
							<label asp-for="Nombre"></label>
						</div>
						<div class="col-8">
							<input asp-for="Nombre" class="form-control bg-secondary text-light" />
							<span asp-validation-for="Nombre" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row">
						<div class="col-8 offset-4">
							<div class="row">
								<div class="col">
									<button type="submit" class="btn btn-success form-control">Guardar</button>
								</div>
								<div class="col">
									<a asp-action="Index" class="btn btn-danger form-control">Regresar</a>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</form>
	</article>
</div>

@section Scripts
	{
	<partial name="_ValidationScriptsPartial" />
}
